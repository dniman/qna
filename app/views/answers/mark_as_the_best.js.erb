<% if @answer.errors.blank? %>
  $("div[class*=row-answer-]").remove();
  $('<%= j render @question.answers.with_attached_files %>').insertBefore($('.answer-errors')); 
<% else %>
  $('.row-answer-<%= @answer.id %>-errors').html("<%= render 'shared/errors', resource: @answer %>");
<% end %>
$(document).foundation();

