<% if @question.errors.blank? %>
  $('.question-row-<%= @question.id %>-errors').replaceWith("");
  $('.question-row-<%= @question.id %>').replaceWith('<%= j render @question %>');
<% else %>
  $('.question-row-<%= @question.id %>-errors').html("<%= render 'shared/errors', resource: @question %>");
<% end %>
